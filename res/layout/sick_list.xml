<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="List Of Sickness"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textSick2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSick1"
        android:layout_alignRight="@+id/textSick1"
        android:layout_below="@+id/textSick1"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Sickness 2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textSick4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSick3"
        android:layout_alignRight="@+id/textSick3"
        android:layout_below="@+id/textSick3"
        android:layout_marginTop="22dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Sickness 4"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textSick5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSick4"
        android:layout_alignRight="@+id/textSick4"
        android:layout_below="@+id/textSick4"
        android:layout_marginTop="22dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Sickness 5"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textSick1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="42dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Sickness 1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textSick3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSick2"
        android:layout_alignRight="@+id/textSick2"
        android:layout_below="@+id/textSick2"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Sickness 3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>